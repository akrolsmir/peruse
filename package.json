{
  "name": "peruse",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n next,convex -c cyan,magenta \"next dev\" \"convex dev\" 2>&1 | tee .dev.log",
    "dev:peek": "tail -f .dev.log",
    "dev:next": "next dev",
    "dev:convex": "convex dev",
    "build": "next build",
    "start": "next start",
    "sync-env": "bun scripts/sync-env.ts",
    "fmt": "oxfmt --write .",
    "fmt:check": "oxfmt --check ."
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.78.0",
    "convex": "^1.32.0",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "replicate": "^1.4.0",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/bun": "^1.3.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "oxfmt": "^0.34.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "ignoreScripts": [
    "sharp",
    "unrs-resolver"
  ],
  "trustedDependencies": [
    "sharp",
    "unrs-resolver"
  ]
}
